    <modelVersion>4.0.0</modelVersion>

    <artifactId>geomesa-gs-plugin</artifactId>
    <name>GeoMesa Geoserver Plugin</name>
    <packaging>pom</packaging>

    <profiles>
        <profile>
            <id>bigtable</id>
            <modules>
                <module>geomesa-bigtable-gs-plugin</module>
            </modules>
        </profile>
        <profile>
            <id>hbase</id>
            <modules>
                <module>geomesa-hbase-gs-plugin</module>
            </modules>
        </profile>
    </profiles>

    <modules>
        <module>geomesa-accumulo-gs-plugin</module>
        <module>geomesa-blobstore-gs-plugin</module>
        <module>geomesa-kafka-gs-plugin</module>
        <module>geomesa-stream-gs-plugin</module>
        <module>geomesa-utils-gs-plugin</module>
        <module>geomesa-cassandra-gs-plugin</module>
